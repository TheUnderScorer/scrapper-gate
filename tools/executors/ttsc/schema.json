{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "cli": "nx",
  "properties": {
    "targetDirectory": {
      "type": "string",
      "description": "Directory of your application"
    },
    "appName": {
      "type": "string"
    },
    "depCheckIgnorePatterns": {
      "type": "array",
      "description": "Patterns that will be ignored by depcheck.",
      "items": {
        "type": "string"
      }
    },
    "tsConfigPath": {
      "type": "string"
    },
    "packageJsonFile": {
      "type": "string",
      "description": "Path to application package.json file"
    }
  },
  "required": ["targetDirectory"]
}
