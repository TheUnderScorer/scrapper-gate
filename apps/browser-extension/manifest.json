{
  "name": "Scrapper Gate",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html#/popup"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["polyfills.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["polyfills.js", "background.js"],
    "persistent": true
  },
  "permissions": ["storage", "<all_urls>"],
  "web_accessible_resources": ["polyfills.js", "content.js"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
