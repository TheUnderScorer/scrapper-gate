{
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "./tools/executors/ttsc:build",
      "options": {
        "targetDirectory": "apps/api",
        "appName": "scrapper-gate-api",
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "depCheckIgnorePatterns": [
          "libs/frontend/*",
          "jest.*",
          "package.*",
          ".eslint*",
          "serverless*",
          "tests*",
          "webpack*",
          "apps/browser-extension*",
          "apps/lambdas*"
        ]
      }
    },
    "build-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "command": "docker build -f ./apps/api/docker/Dockerfile -t scrapper-gate-api:latest --pull=false ."
      }
    },
    "serve-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "command": "docker-compose -f docker-compose.prod.yml up -d api"
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "parallel": false,
        "command": "npm run ts-node-dev apps/api/src/main.ts"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
